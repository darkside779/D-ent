# Database
# For development
DATABASE_URL=sqlite:///./smartextract.db
# For production (uncomment and configure)
# DATABASE_URL=postgresql://user:password@localhost/smartextract

# Security
# Generate a secure key with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=replace_with_secure_key_at_least_32_chars_long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# App Settings
# Set to False in production
DEBUG=True
API_V1_STR=/api/v1
PROJECT_NAME=SmartExtract Pro

# CORS Settings (comma-separated list for production)
# BACKEND_CORS_ORIGINS=https://example.com,https://subdomain.example.com

# File Upload Settings
# UPLOAD_FOLDER=/path/to/secure/uploads
# MAX_CONTENT_LENGTH=52428800  # 50MB in bytes